        { "slug": "bg-dark",          "color": "#0D0D12", "name": "Fondo Oscuro" },
        { "slug": "bg-card",          "color": "#16161E", "name": "Fondo Tarjeta" },
        { "slug": "bg-elevated",      "color": "#1E1E2A", "name": "Fondo Elevado" },
