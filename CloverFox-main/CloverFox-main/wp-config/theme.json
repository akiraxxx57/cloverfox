        { "slug": "text-secondary",   "color": "#A0A0B8", "name": "Texto Secundario" }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #FF6B2B, #FF914D)",
          "name": "Gradiente Naranja"
        },
        {
          "slug": "secondary-gradient",
          "gradient": "linear-gradient(135deg, #2ECC71, #5DDFAA)",
          "name": "Gradiente Verde"
        },
        {
          "slug": "hero-gradient",
          "gradient": "linear-gradient(135deg, #FF6B2B, #2ECC71)",
          "name": "Gradiente Hero"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Outfit', sans-serif",
          "slug": "heading",
          "name": "Outfit (Encabezados)",
          "googleFonts": "Outfit:wght@300;400;500;600;700;800"
        },
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "body",
          "name": "Inter (Cuerpo)",
          "googleFonts": "Inter:wght@300;400;500;600;700"
        }
      ],
      "fontSizes": [
        { "slug": "small",   "size": "0.875rem", "name": "Pequeño" },
        { "slug": "medium",  "size": "1rem",     "name": "Normal" },
        { "slug": "large",   "size": "1.25rem",  "name": "Grande" },
        { "slug": "x-large", "size": "1.75rem",  "name": "Extra Grande" },
        { "slug": "huge",    "size": "2.5rem",   "name": "Enorme" }
      ]
    },
    "layout": {
      "contentSize": "1280px",
      "wideSize": "1440px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vw", "vh"]
    }
  },
  "menus": {
    "primary": {
      "name": "Menú Principal",
      "items": [
        { "title": "Inicio",            "url": "/",                "type": "page" },
        { "title": "Servicios",         "url": "/servicios/",      "type": "page" },
        { "title": "Sobre la empresa",  "url": "/sobre-nosotros/", "type": "page" },
        { "title": "Tienda",            "url": "/tienda/",         "type": "page" },
        { "title": "Contacto",          "url": "/contacto/",       "type": "page" },
        { "title": "Iniciar sesión",    "url": "/mi-cuenta/",      "type": "page" }
      ]
    },
    "footer": {
      "name": "Menú Footer",
      "items": [
        { "title": "Política de privacidad", "url": "/privacidad/", "type": "page" },
        { "title": "Términos de uso",        "url": "/terminos/",   "type": "page" },
        { "title": "Política de cookies",    "url": "/cookies/",    "type": "page" },
        { "title": "Aviso legal",            "url": "/aviso-legal/","type": "page" }
      ]
    }
  },
  "pages": [
    {
      "title": "Inicio",
      "slug": "inicio",
