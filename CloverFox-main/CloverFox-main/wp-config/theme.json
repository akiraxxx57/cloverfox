    "tags": [
      "block-editor",
      "custom-colors",
      "custom-logo",
      "custom-menu",
      "e-commerce",
      "responsive-layout",
      "translation-ready"
    ]
  },
  "settings": {
    "color": {
      "palette": [
        { "slug": "primary",          "color": "#FF6B2B", "name": "Naranja Primario" },
        { "slug": "primary-light",    "color": "#FF914D", "name": "Naranja Claro" },
        { "slug": "primary-dark",     "color": "#E55A1B", "name": "Naranja Oscuro" },
        { "slug": "secondary",        "color": "#2ECC71", "name": "Verde Secundario" },
        { "slug": "secondary-light",  "color": "#5DDFAA", "name": "Verde Claro" },
        { "slug": "secondary-dark",   "color": "#27AE60", "name": "Verde Oscuro" },
